<!DOCTYPE html>
<html ng-app="myapp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Team 1 Blogs</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.min.js"></script>
    

    <script src="~/angular/angular.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Team 1 Blogs", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "PublicBlogs")</li>
                    @{if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("MyBlog", "Index", "MyBlog")</li>

                    }}
                    
                    <li>@Html.ActionLink("BrowsBlogs", "Index", "PublicBlogs")</li>
                    <li>@Html.ActionLink("CearteBlog", "create", "myBlog")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="mainSearch">
                        @using (Html.BeginForm("Search", "SearchBlog", "POST"))
                        {
                            <div>
                                <input id="search" name="search" class="Search" type="text" />
                                <input type="submit" value="Search" />
                            </div>
                        }
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")

            </div>
            <div class="row">
                <div class="col-md-12 pull-left">
                    @*@Html.Partial("_LoggedInHeaderPartial")*@
                </div>
            </div>
        </div>
    </div>
    
    <div class="container body-content">
        <br />
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
