
@model Team1Blog.Models.Post
<div class="container-fluid">
    <div class="row">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="form-horizontal">
                    <div class="modal-header">
                        <h3>Create new Post for Blog: </h3>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("addpost", "MyBlog", "addpost"))
                        {
                            <input type="hidden" value="@Model.BlogId" name="blogid" />


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="control-label col-md-3"><p>Title</p></div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Titel, new { htmlAttributes = new { @required = "required", @class = "form-control title" } })
                                    @Html.ValidationMessageFor(model => model.Titel, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-3">
                                    Image Url
                                </div>
                              
                                <div class="col-md-9">
                                    <input type="text" name="image" class="form-control" />
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="control-label col-md-3"><p>Description</p></div>
                                <div class="col-md-9">
                                    @Html.TextAreaFor(model => model.Body,15,41, new { htmlAttributes = new { @required = "required", @class = "form-control" } })
                            
                               
                                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            <div class="form-group">

                                <div class="control-label col-md-3"><p>Tags</p></div>
                                <div class="col-md-9">
                                    
                                <input class="form-control" type="text" name="tags1" data-role="tagsinput" />




                                </div>
                            </div>

                            

                            <div class="form-group">

                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>


                  
                        }

                       
                    </div>
                    <div class="modal-footer">
                        <a href="/myblog/postindex/@Model.BlogId" class="btn btn-primary pull-left">Post Index</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<link href="~/Content/bootstrap-tagsinput.css" rel="stylesheet" />
@section Scripts {
    <script src="~/Scripts/bootstrap-tagsinput.js"></script>
}