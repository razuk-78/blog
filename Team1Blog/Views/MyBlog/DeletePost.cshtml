@model Team1Blog.Models.Post



<div class="container">
   
    <div class="row">
     
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.Titel</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                       
                            <div class="col-md-6">
                                <p>@Model.Body</p>
                            </div>
                            <div class="col-md-6">
                                <img src="@Model.image" alt="Bootstrap Image Preview">
                            </div>
                    
                     

                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-3 label-blog"><p>Created: @Model.Created</p></div>
                       
                        <div class="col-md-3 label-blog">
                            @{
            foreach (var tag in Model.Tags)
            {
                <span class="label label-primary">@tag.Name</span>
            }
                            }
                        </div>
                        <div class="col-md-offset-4 col-md-2  label-blog">
                          <h5>are you sure you want to delete this post ?</h5>
                            <form action="/myblog/DeletePost" method="post">
                                <input type="hidden" value="@Model.Id" name="id" />
                                <input type="submit" value="Delete" class="btn btn-lg btn-danger"/>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <hr />

        }

    </div>
</div>

