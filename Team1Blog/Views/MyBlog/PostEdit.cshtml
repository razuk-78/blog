@using Team1Blog.Models
@model Team1Blog.Models.Post
@{
    string tags = "";
    if (ViewBag.tags!=null)
    {
        tags = ViewBag.tags;
    }
     tags = ViewBag.tags;
}


<div class="container-fluid">
    <div class="row">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="form-horizontal">
                    <div class="modal-header">
                        <h3>Edit Post</h3>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("PostEdit","MyBlog"))
                        {
                            <input type="hidden" value="@Model.BlogId" name="BlogId" />


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="control-label col-md-2"><p>Title</p></div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Titel, new { htmlAttributes = new { @class = "form-control title" } })
                                    @Html.ValidationMessageFor(model => model.Titel, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2"><p>Image URL</p></div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control" } })
                                    
                                    @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2"><p>Description</p></div>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.Body, 15, 47, new { htmlAttributes = new { @class = "form-control" } })
                                    
                                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="control-label col-md-2"><p>Tags</p></div>
                                <div class="col-md-10">
                                    <input type="hidden"value="@tags"name="Otags" />
                                    <input class="form-control" type="text" name="tags1" data-role="tagsinput" value="@tags"/>

                                  

                    

                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-success" />
                                </div>
                            </div>


                        }

                        
                    </div>
                    <div class="modal-footer">
                        <a href="/myblog/PostIndex/@Model.BlogId" class="btn btn-primary pull-left">Post Index</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*<script src="//cdn.jsdelivr.net/bootstrap.tagsinput/0.4.2/bootstrap-tagsinput.min.js"></script>*@
<link href="~/Content/bootstrap-tagsinput.css" rel="stylesheet" />
@section Scripts {
    <script src="~/Scripts/bootstrap-tagsinput.js"></script>
}